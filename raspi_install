!#/bin/bash

#RUN THIS SCRIPT AS SUDO

#1 APT UPDATE
apt update

#2 APT UPGRADE
apt upgrade

#3 RSYNC
apt install rsync

#4 LOG2RAM
cd
mkdir tmp
cd tmp
wget https://github.com/azlux/log2ram/archive/master.tar.gz -O log2ram.tar.gz
tar xf log2ram.tar.gz
cd ~/tmp/log2ram-master
./install.sh

#5 FAIL2BAN
apt install fail2ban



